<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="hii">
                 <img class="img-responsive" src="<%= foundCamp.image %>" >
                 <div class="caption">
                     <h4 class=" float-right" >$<%= foundCamp.price %>/night</h4>
                     <h4><a href=""><%= foundCamp.name %></a></h4>
                     <p>
                            <em>Submitted By <%= foundCamp.author.username %></em>
                    </p>
                     <p><%= foundCamp.description %></h4></p>
                     <% if(currentUser && foundCamp.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/camp/<%= foundCamp._id %>/edit"> Edit </a>
                
                        <form class="delete" action="/camp/<%= foundCamp._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger"> Delete </button>
                        </form>
                     <% } %>
                 </div>
            </div>
            <div class="bg-light" style="margin: 20px 0; padding: 20px;">
                <div class="text-right">
                        <a class="btn btn-success" href="/camp/<%= foundCamp._id %>/comments/new">Add a new comment</a>
                </div>
                <hr>
                <% foundCamp.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>
                                <span class="float-right">10 days ago</span>
                                <p><%=comment.text%></p>
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a href="/camp/<%= foundCamp._id %>/comments/<%= comment._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <form class="delete" action="/camp/<%= foundCamp._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-sm btn-danger ">Delete</button>
                                </form>
                                <hr>
                                <% } %>
                        </div>
                    </div>
                <% }); %>     
            </div>
        </div>
    </div>

           
</div>
<% include ../partials/footer %>