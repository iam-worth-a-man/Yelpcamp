<% include ../partials/header %>
<div class="container">
                <h1 id="camphead">Add Your Campground Here</h1>
                <div id="campform">
                         <form action="/camp" method="POST" >
                                <div class="form-group">
                                        <label for="a" >Title : </label>
                                        <input id="a " class="form-control" type="text" placeholder="Campground" name="name"> 
                                </div>
                                <div class="form-group">
                                        <label for="ab" >Price : </label>
                                        <input id="ab " class="form-control" type="number" min="0.01" step="0.10" name="price"> 
                                </div>
                                <div class="form-group">
                                        <label for="b" >Image link : </label>
                                        <input  class="form-control" type="text" placeholder="www.image.com" name="image" id="b">
                                </div>
                                <div class="form-group">
                                        <label for="c" >Description :  </label>
                                        <input class="form-control"  type="text" placeholder="add the description" name="description" id="c">
                                </div>
                                <div class="form-group">
                                        <button class="btn btn-primary btn-block">submit</button> 
                                </div>
                                        
                         </form>  
                </div>       
</div>

          




